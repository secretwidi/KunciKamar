<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/rounded_all_top"
        android:backgroundTint="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/card_cari"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/cari_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="32sp"
                    android:text="@string/cari_hotel"
                    android:textAppearance="@style/cari_hotel"
                    android:gravity="top"/>

            <TextView
                    android:id="@+id/temukan_hot"
                    android:layout_below="@id/cari_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/temukan_hot"
                    android:textAppearance="@style/temukan_hot"
                    android:gravity="top"/>

            <TextView
                    android:id="@+id/kota"
                    android:layout_below="@id/cari_hotel"
                    android:layout_width="34dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/kota"
                    android:textAppearance="@style/kota"
                    android:gravity="top"/>

            <androidx.cardview.widget.CardView
                    android:layout_below="@id/kota"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/cari_kota"
                        android:layout_margin="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cari_kota"
                        android:textAppearance="@style/cari_kota"/>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/check_in"
                    android:layout_below="@id/kota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/check_in"
                    android:textAppearance="@style/kota"
                    android:gravity="top"/>

            <androidx.cardview.widget.CardView
                    android:layout_below="@id/check_in"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/agustus"
                        android:layout_margin="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agustus"
                        android:layout_gravity="center"
                        android:textAppearance="@style/agustus"/>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/check_out"
                    android:layout_below="@id/kota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="64dp"
                    android:text="@string/check_out"
                    android:textAppearance="@style/kota"
                    android:gravity="top"/>

            <androidx.cardview.widget.CardView
                    android:layout_below="@id/check_out"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/agustus2"
                        android:layout_margin="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_12_agustus"
                        android:layout_gravity="center"
                        android:textAppearance="@style/agustus"/>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/tamu"
                    android:layout_below="@id/check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/tamu"
                    android:textAppearance="@style/kota"/>

            <androidx.cardview.widget.CardView
                    android:layout_below="@id/tamu"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_gravity="center"
                        android:id="@+id/jml_tamu"
                        android:layout_margin="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_5"
                        android:textAppearance="@style/agustus"/>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/room"
                    android:layout_below="@id/check_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="64dp"
                    android:text="@string/room"
                    android:textAppearance="@style/kota"
                    android:gravity="top"/>

            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_below="@id/room"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/jml_kamar"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2"
                        android:textAppearance="@style/agustus"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_cari"
                    app:cardElevation="4dp"
                    android:layout_below="@id/room"
                    app:cardCornerRadius="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="72dp"
                    android:layout_marginBottom="32sp"
                    app:cardBackgroundColor="#1FA2FF">

                <TextView
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:text="@string/cari"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


</RelativeLayout>