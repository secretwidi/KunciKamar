<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".FacebookActivity">

    <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/img_header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


    </ImageView>
    <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:tint="@color/White"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_img_fb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    <ImageView
            android:id="@+id/kunci"
            android:src="@drawable/kuncikamar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>
    <TextView
            android:id="@+id/desc_kunci"
            android:layout_below="@id/kunci"
            android:layout_marginTop="16dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="140dp"
            android:fontFamily="@font/montserratregular"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="Masuk ke akun Facebook Anda untuk terhubung dengan Kuncikamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
                android:id="@+id/user_fb"
                android:layout_above="@id/pass_fb"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/rounded_all_top_fb"
                android:backgroundTint="@color/VeryWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:textColorHint="@color/colorPrimaryDarker"
                    android:hint="Nomor ponsel atau email"
                    android:backgroundTint="@color/VeryWhite"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/pass_fb"
                android:layout_above="@id/btn_masuk"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_all_bot_fb"
                android:backgroundTint="@color/VeryWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:hint="Kata sandi Facebook"
                    android:layout_marginLeft="8dp"
                    android:textColorHint="@color/colorPrimaryDarker"
                    android:textSize="12dp"
                    android:backgroundTint="@color/VeryWhite"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
        </RelativeLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/btn_masuk"
            android:layout_below="@id/desc_kunci"
            android:scaleType="centerCrop"
            android:layout_marginLeft="24dp"

            app:cardElevation="0dp"
            app:cardBackgroundColor="#384DAD"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/montserratbold"
                android:padding="12dp"
                android:text="Masuk"
                android:textColor="@color/White"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/new_acc"
            android:layout_below="@id/btn_masuk"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserratregular"
            android:textSize="12dp"
            android:textColor="@color/Black"
            android:text="Buat Akun"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/later"
            android:layout_below="@id/new_acc"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserratregular"
            android:textSize="12dp"
            android:textColor="@color/Black"
            android:text="Lain Kali"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/fnh"
            android:layout_below="@id/later"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/forget"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserratregular"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDarkest"
                android:text="Lupa Kata Sandi? . "
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/help"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserratregular"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDarkest"
                android:text="Pusat Bantuan"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_below="@id/fnh"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Bahasa Indonesia"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Bahasa Jawa"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="日本語"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Portugues (Brazil)"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Englush (UK)"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Bahasa Melayu"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Espanol"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginTop="4dp"
                    android:tint="@color/colorPrimaryDarker"
                    android:src="@drawable/ic_plus"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_below="@id/fnh"
            android:fontFamily="@font/montserratregular"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_centerHorizontal="true"
            android:text="Facebook©2019"
            android:textSize="10dp"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>