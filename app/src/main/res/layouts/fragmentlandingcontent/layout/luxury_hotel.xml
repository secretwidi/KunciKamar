<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/montserratbold"
            android:text="Luxury Class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimaryDarkest"
            android:fontFamily="@font/montserratsemibold"
            android:text="Penginapan dengan berbagai aspek bintang lima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/luxe_list"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </HorizontalScrollView>
    <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <RelativeLayout
                android:layout_margin="2dp"
                android:padding="14dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@color/VeryWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:layout_centerInParent="true"
                    android:text="Tampilkan Semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>