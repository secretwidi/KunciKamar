<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_greeting_grdnt"
        tools:context=".BuatSandiActivity">
    <androidx.cardview.widget.CardView
            android:id="@+id/welcome"
            app:cardElevation="0dp"
            android:onClick="back"
            app:cardBackgroundColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <FrameLayout
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_button_back"/>
        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <TextView
            android:id="@+id/in"
            android:textColor="@color/Black"
            android:fontFamily="@font/montserratbold"
            android:textSize="24dp"
            android:text="Buat kata sandi"
            android:layout_margin="18dp"
            android:layout_below="@id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/desc"
            android:textColor="@color/colorPrimaryDarkest"
            android:fontFamily="@font/montserratsemibold"
            android:text="Kata sandi Anda harus menyertakan setidaknya satu simbol dan terdiri atas 8 karakter atau lebih"
            android:layout_marginLeft="18dp"
            android:layout_below="@id/in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/name1"
            android:textColor="@color/colorPrimaryDarkest"
            android:fontFamily="@font/montserratsemibold"
            android:text="KATA SANDI"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="32dp"
            android:layout_below="@id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/show"
            android:textColor="@color/colorPrimaryDarkest"
            android:fontFamily="@font/montserratsemibold"
            android:text="Tampilkan"
            android:textSize="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="32dp"
            android:layout_below="@id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:inputType="textPassword"
            android:id="@+id/name_front"
            android:layout_below="@id/name1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/mainnext"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

</RelativeLayout>