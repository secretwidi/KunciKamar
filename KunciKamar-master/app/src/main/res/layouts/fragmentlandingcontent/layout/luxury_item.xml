<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            android:layout_width="240dp"
            android:layout_height="160dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="240dp"
                android:layout_height="160dp">
            <ImageView
                    android:id="@+id/hotel_pic"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_radiance_sunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    android:layout_marginTop="-60dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <RelativeLayout
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/luxe"
                            android:layout_marginTop="1dp"
                            android:padding="1dp"
                            android:textColor="@color/VeryWhite"
                            android:fontFamily="@font/montserratbold"
                            android:textSize="8sp"
                            android:text="LUXE"
                            android:background="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/blabla1"
                            android:layout_toRightOf="@id/luxe"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserratsemibold"
                            android:textSize="8sp"
                            android:text="TERVERIFIKASI - "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/city"
                            android:layout_toRightOf="@id/blabla1"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserratsemibold"
                            android:textSize="8sp"
                            android:text="JAKARTA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/hotel_name"
                            android:layout_below="@id/luxe"
                            android:textColor="@color/Black"
                            android:fontFamily="@font/montserratbold"
                            android:textSize="10sp"
                            android:text="Radiance Sunset - Lembongan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/currency"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/colorPrimaryDarkest"
                            android:fontFamily="@font/montserratsemibold"
                            android:layout_alignParentBottom="true"
                            android:textSize="8sp"
                            android:text="Idr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/hotel_price"
                            android:layout_toRightOf="@id/currency"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/colorPrimaryDarkest"
                            android:fontFamily="@font/montserratsemibold"
                            android:layout_alignParentBottom="true"
                            android:textSize="8sp"
                            android:text="7800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/blabla"
                            android:layout_toRightOf="@id/hotel_price"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/colorPrimaryDarkest"
                            android:fontFamily="@font/montserratsemibold"
                            android:layout_alignParentBottom="true"
                            android:textSize="8sp"
                            android:text="k/malam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>