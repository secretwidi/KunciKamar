<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/montserratbold"
            android:text="Disekitar Anda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                    android:layout_margin="8dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="210dp"
                    android:layout_height="140dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_radiance_sunset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="0dp"
                            android:layout_marginTop="-56dp"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                        <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:textColor="@color/Black"
                                    android:fontFamily="@font/montserratbold"
                                    android:textSize="10sp"
                                    android:text="Radiance Sunset - Lembongan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_marginTop="1dp"
                                    android:textColor="@color/colorPrimaryDarkest"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:textSize="8sp"
                                    android:text="Idr 78k/malam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <RatingBar
                                    style="?attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleX=".8"
                                    android:scaleY=".8"
                                    android:transformPivotX="-2dp"
                                    android:transformPivotY="8dp"
                                    android:isIndicator="true"
                                    android:max="5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="8dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="210dp"
                    android:layout_height="140dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_courtyard_by_marriott_bali"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="0dp"
                            android:layout_marginTop="-56dp"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                        <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:textColor="@color/Black"
                                    android:fontFamily="@font/montserratbold"
                                    android:textSize="10sp"
                                    android:text="Courtyard Marriot - Seminyak"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_marginTop="1dp"
                                    android:textColor="@color/colorPrimaryDarkest"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:textSize="8sp"
                                    android:text="Idr 100k/malam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <RatingBar
                                    style="?attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleX=".8"
                                    android:scaleY=".8"
                                    android:transformPivotX="-2dp"
                                    android:transformPivotY="8dp"
                                    android:isIndicator="true"
                                    android:max="5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="8dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="210dp"
                    android:layout_height="140dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_inaya_putri_bali"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="0dp"
                            android:layout_marginTop="-56dp"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                        <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:textColor="@color/Black"
                                    android:fontFamily="@font/montserratbold"
                                    android:textSize="10sp"
                                    android:text="Inaya Putri - Bali"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_marginTop="1dp"
                                    android:textColor="@color/colorPrimaryDarkest"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:textSize="8sp"
                                    android:text="Idr 214k/malam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <RatingBar
                                    style="?attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleX=".8"
                                    android:scaleY=".8"
                                    android:transformPivotX="-2dp"
                                    android:transformPivotY="8dp"
                                    android:isIndicator="true"
                                    android:max="5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>