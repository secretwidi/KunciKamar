<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_greeting_grdnt"
        android:padding="18dp"
        tools:context=".GreetingActivity">

    <TextView
            android:id="@+id/indicator"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/login"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/Black"
            android:fontFamily="@font/montserratsemibold"
            android:text="Masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_above="@id/indicator"
            android:layout_marginBottom="170dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:src="@drawable/kuncikamar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"/>

    <TextView
            android:layout_marginBottom="80dp"
            android:layout_above="@id/indicator"
            android:textColor="@color/Black"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="18sp"
            android:text="Selamat datang di KunciKamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/fb_in"
                android:layout_above="@id/indicator"
                app:cardElevation="0dp"
                app:cardCornerRadius="22dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginBottom="-4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_btn_greeting_grn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:tint="@color/White"
                            android:src="@drawable/ic_facebook"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="4dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    <TextView
                            android:textColor="@color/White"
                            android:fontFamily="@font/montserratsemibold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:textSize="13sp"
                            android:text="Lanjutkan menggunakan Facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/signup"
                android:layout_below="@id/indicator"
                app:cardElevation="0dp"
                app:cardCornerRadius="23dp"
                android:layout_marginTop="-4dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_margin="2dp"
                    android:padding="12dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_btn_greeting_grn"
                    android:backgroundTint="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/montserratsemibold"
                        android:layout_marginLeft="4dp"
                        android:textSize="14sp"
                        android:layout_centerInParent="true"
                        android:text="Buat Akun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    <TextView
            android:layout_marginTop="70dp"
            android:layout_below="@id/indicator"
            android:textColor="@color/Black"
            android:fontFamily="@font/montserratregular"
            android:textSize="14sp"
            android:text="Lebih banyak opsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_below="@id/indicator"
            android:fontFamily="@font/montserratregular"
            android:textColor="@color/Black"
            android:layout_marginTop="110dp"
            android:textSize="12sp"
            android:text="Dengan mengetuk opsi Lanjutkan, Buat Akun, atau Lainnya, berarti saya menyetujui ketentuan Layanan, Ketentuan Layanan Pembayaran, Kebijakan Privasi, dan Kebijakan Non-diskriminasi KunciKamar."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</RelativeLayout>